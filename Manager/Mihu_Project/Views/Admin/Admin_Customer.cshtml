@model System.Data.DataTable
@{
    ViewBag.Title = "Admin_Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Customer</a>
    </li>
    <li class="breadcrumb-item active">View List</li>
</ol>

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fullname</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Fullname</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Rank</th>
                    </tr>
                </tfoot>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>@Model.Rows[i][0]</td>
                            <td>@Model.Rows[i][1]</td>
                            <td>@Model.Rows[i][2]</td>
                            <td>@Model.Rows[i][3]</td>
                            <td>
                                @if (Model.Rows[i][4].ToString().Length == 0)
                                {
                                    <p>Unrank</p>
                                }
                                else
                                {
                                    <p>@Model.Rows[i][4].ToString().ToUpper()</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

