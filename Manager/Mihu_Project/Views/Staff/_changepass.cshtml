@{
    Layout = null;
}

@model Mihu_Project.Models.ChangPasswordModel

@{
    using (Html.BeginForm("Staff_ChangePassword", "Staff", FormMethod.Post))
    {
        <div class="form-group">
            <div class="form-label-group">
                @Html.TextBoxFor(m => m.Username, new { @Value = @FormsAuthentication.Decrypt(Request.Cookies[FormsAuthentication.FormsCookieName].Value).Name, @id = "inputUsername", @class = "form-control", @placeholder = "Username", @required = "required", @autofocus = "autofocus", @readonly = "true" })
                <label for="inputUsername">Username</label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                @Html.PasswordFor(m => m.Password, new { @id = "inputPassword", @class = "form-control", @placeholder = "Password", @required = "required" })
                <label for="inputPassword">Password</label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "inputConfirm", @class = "form-control", @placeholder = "Confirm Password", @required = "required" })
                <label for="inputConfirm">Confirm Password</label>
            </div>
        </div>
        @Html.ValidationSummary(false, "", new { @style = "color: red;" });
        <input class="btn btn-primary btn-block" type="submit" value="Save" />

    }
}

