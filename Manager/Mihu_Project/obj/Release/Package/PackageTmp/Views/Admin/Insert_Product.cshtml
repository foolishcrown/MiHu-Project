@using System.Data;
@model Mihu_Project.Models.Product
@{
    ViewBag.Title = "Admin_Insert_Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<form class="form-horizontal" method="post">*@
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="../Admin">Admin</a>
    </li>
    <li class="breadcrumb-item active">Insert Product</li>
</ol>


@TempData["ERROR"]
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Text input-->
    <div class="form-row">
        <!-- Select Basic -->
        <!-- Text input-->
        <div class="form-group col-md-10">
            <label class="col col-form-label col-form-label-lg" for="product_name">PRODUCT NAME</label>
            <div class="col-md-12">
                @*<input id="product_name" name="product_name" placeholder="name of product" class="form-control form-control-lg input-md" required="" type="text">*@
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control form-control-lg input-md", required = "", placeholder = "name of product" })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="col col-form-label col-form-label-lg" for="product_categorie">PRODUCT CATEGORY</label>
            <div class="col-md-12">
                @*<select id="product_categorie" name="product_categorie" class="form-control form-control-lg input-md" required="">
                        @{

                        }
                        @for (int i = 0; i < dtCate.Rows.Count; i++)
                        {
                            <option>@dtCate.Rows[i][0] - @dtCate.Rows[i][1]</option>
                        }
                    </select>*@
                @{ List<SelectListItem> CateListItem = new List<SelectListItem>();
                    DataTable dtCate = ViewBag.CateList;
                    for (int i = 0; i < dtCate.Rows.Count; i++)
                    {
                        CateListItem.Add(new SelectListItem { Text = @dtCate.Rows[i][1].ToString(), Value = dtCate.Rows[i][0].ToString() });
                    }
                }
                @Html.DropDownListFor(x => x.CateID, new SelectList(CateListItem, "Value", "Text"), new { @class = "form-control form-control-lg input-md" })


            </div>
        </div>


        <!-- Text input-->
        <div class="form-group col-md-3">
            <label class="col col-form-label col-form-label-lg" for="product_price">PRODUCT PRICE</label>
            <div class="col-md-12">
                @*<input id="product_price" name="product_price" placeholder="12.34" class="form-control form-control-lg input-md" required="" type="number" step="0.01" min="1">*@
                @Html.TextBoxFor(x => x.UnitPrice, new
                {
                    @class = "form-control form-control-lg input-md",
                    required = "",
               placeholder = "12.34",
                    type = "number",
                    step = "0.01",
                    min = "1"
                })
            </div>
        </div>
        <div class="form-group col-md-3">
            <label class="col col-form-label col-form-label-lg" for="available_quantity">AVAILABLE QUANTITY</label>
            <div class="col-md-12">
                @*<input id="available_quantity" name="available_quantity" placeholder="99" class="form-control form-control-lg input-md" required="" type="number" min="1">*@
                @Html.TextBoxFor(x => x.Stock, new
                {
                    @class = "form-control form-control-lg input-md",
               required = "",
                    placeholder = "99",
                    type = "number",
                    min = "1"
                })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label class="col col-form-label col-form-label-lg" for="image_link">PRODUCT IMAGE LINK</label>

            <div class="col-md-10">

                @*<input id="image_link" name="image_link" placeholder="https://lh3.googleusercontent.com/DTK0f-WqDZwyYaGwa9eWPDCYj4Ms-r9oxjk5J1klGF3ArV2hKmXhWypZsS1GdoEMMCkX6SUVkuoS9UljR7Dpk_5LqSMHMBSomHpd_Df88c5kZS8r__J1YYDx_OvIKPak7p17HFauZWXMycYgpXuW8QeiOztte40qiOzOUsWOHzl9LK5iimAr_T_0_lMnGXDOGNrAxSO0jLWDdn_g9QQi-0FjKjWdsI0HvnH3GS-KrtzPO17oeWJpcWjm0LhIEK85WtHedDZUkcIa8e7ISepfVD8rbV8aDYoN6ak0T_HAm8f3NojEX4-K9Aqc4-z0BZrt2sorRyk8YWnRdHqkO6ElqBBvbp2WJDTUn7RVZEmKB1VxGMnb3aL8fOoYLD4r0J2QujnL0wBK3Ll8DsfLHWVff27l0I5yh5yU-oJ2V9Paj_5EWQV9xEhw8mO_-OZsa0r0ktHuD3FTCRZCL7vB1M7Qc2pr9eiuJwtF1hHfdySGY5ghfZ8FyHgoY2GAYIhiC2Ffz_duoWmykv8c2bdn_wq8eQkAUIk0hYlFHx4x5kD8PM1PCwJIIhqK1iH61LTZ1GnYsC5W-gKSZAQHvZzeajy_exChumVhsaZqoOT8i2SZC9WVglCiHwOVTSoVypCGK5aglZTMUNSyx6cHiksUE2UZ7I27vjuquPJdulJ9qUENsD-HJ_Lt3vCLpOV3NN03_G6eqzjRmCu4vT97HzLUp75hDdxSxotjIJ6MiXhcjsgTShE_9Fqo=s750-no" class="form-control form-control-lg input-md" required="" type="text">*@
                @Html.TextBoxFor(x => x.Image, new
           {
               @class = "form-control form-control-lg input-md ",
               required = "",
               placeholder = "example.com/example.jpg"
           })

            </div>


        </div>

    </div>
    <div class="form-group col">
        <div class="col-md-1">
            <a href="https://photos.app.goo.gl/PbkLHfERutmxsmfr5" target="_blank"><button id="button" type="button" name="insert" class="btn btn-dark btn-xs"><i class="fa fa-search"></i></button></a>
        </div>
        
    </div>
    




    <div class="form-row">

        <!-- Text input-->
        <!-- Textarea -->
        <div class="form-group col-md-12">
            <label class="col col-form-label col-form-label-lg" for="product_description">PRODUCT DESCRIPTION</label>
            <div class="col-md-10">
                @*<textarea class="form-control form-control-lg" id="product_description" name="product_description"></textarea>*@
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control form-control-lg", required = "", Text = @Request["Description"] })
            </div>
        </div>
    </div>

    <!-- Button -->
    <div class="form-group col">
        <div class="col-md-5">
            <button id="insert" type="submit" name="insert" class="btn btn-dark btn-lg">Insert</button>
        </div>
        <label class="col-form-label col-form-label-lg text-danger" for="insert">@TempData["InsertSuccess"]</label>
    </div>

    @*</form>*@
}
