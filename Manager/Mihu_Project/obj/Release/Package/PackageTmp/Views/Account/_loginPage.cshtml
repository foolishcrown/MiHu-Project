@{
    Layout = null;
}

<!-- _loginPage.cshtml -->
@model Mihu_Project.Models.LoginModel

@{
    using (Html.BeginForm("LoginPage", "Account", FormMethod.Post))
    {
    <div class="form-group">
        <div class="form-label-group">
            @Html.TextBoxFor(m => m.Username, new { @id = "inputUsername", @class = "form-control",@placeholder="Username", @required = "required", @autofocus = "autofocus" })
            <label for="inputUsername">Username</label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-label-group">
            @Html.PasswordFor(m => m.Password, new { @id="inputPassword" ,@class="form-control", @placeholder="Password", @required="required"})
            <label for="inputPassword">Password</label>
        </div>
    </div>  
    @Html.ValidationSummary(false, "", new { @style = "color: red;" });
        <input class="btn btn-primary btn-block" type="submit" value="Login" />

        }
        }
