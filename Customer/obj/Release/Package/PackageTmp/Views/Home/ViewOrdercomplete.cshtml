
@{
    ViewBag.Title = "View Order Complete";
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
}

@{
    string congrats = ViewBag.Congrats;
}
<div class="colorlib-product">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 offset-sm-1 text-center">
                <p class="icon-addcart"><span><i class="icon-check"></i></span></p>
                @if (congrats != null)
                {
                    <h2 class="mb-4">@congrats</h2>
                    <h2 class="mb-4">Your order is complete</h2>
                }
                else
                {
                    <h2 class="mb-4">Thank you for purchasing, Your order is complete</h2>
                }
                <p>
                    <a href="~/Home/SearchRandom" class="btn btn-primary btn-outline-primary">Home</a>


                </p>
            </div>
        </div>
    </div>
</div>

