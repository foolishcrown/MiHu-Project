@using MiHuStore.Models.Product
@using MiHuStore.Models.Customer
@{
    ViewBag.Title = "Search View";
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
}


@{
    ProductDTO dto = ViewBag.ProductDetail;
}

<div class="colorlib-product">

    <div class="container">

        <div class="row row-pb-lg product-detail-wrap">
            <div class="col-sm-8">
                <div style="width: 700px; height: 500px;">
                    <img src="@dto.Image" style="width: 600px; height: 500px; padding-left: 100px;" alt="Free html5 bootstrap 4 template">


                </div>
            </div>
            <div class="col-sm-4">
                <div class="product-desc">
                    <h3>@dto.NameProduct</h3>
                    <p class="price">
                        <span>$@dto.Price</span>
                        <span class="rate">
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-full"></i>
                            <i class="icon-star-half"></i>
                            (74 Rating)
                        </span>
                    </p>
                    <p>@dto.Description</p>
                    <p>(Max quantity: @dto.Stock)</p>
                    <div class="size-wrap">
                        <div class="block-26 mb-2">
                            <form action="Buy" method="post">
                                <input type="hidden" name="txtID" value="@dto.ID" />
                                <input type="hidden" name="txtName" value="@dto.NameProduct" />
                                <input type="hidden" name="txtPrice" value="@dto.Price" />
                                <input type="hidden" name="txtDescription" value="@dto.Description" />
                                <input type="hidden" name="txtImage" value="@dto.Image" />

                                <div class="input-group mb-4">


                                    <input type="number" id="quantity" name="txtQuantity" class="form-control input-number col-6" value="1" min="1" max="@dto.Stock" required><!--Keu thag Kay viet ho requied-->

                                </div>
                                <div class="row">
                                    <div class="col-sm-12 text-center">


                                            <button type="submit" class="btn btn-primary btn-addtocart"><i class="icon-shopping-cart"> Add to Cart</i></button>
                                       


                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        
    </div>
</div>

